<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.uninorte.jdmaestre.calculadoradenotas.DatosMaterias">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NombreMateriaField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Nombre de la materia" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NumCortesField"
        android:hint="Numero de cortes"
        android:visibility="visible"
        android:layout_below="@+id/NombreMateriaField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte6Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="161dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte1Field"
        android:layout_alignEnd="@+id/Corte6Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_above="@+id/Corte2Field"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte2Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_above="@+id/Corte3Field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte3Field"
        android:layout_alignEnd="@+id/Corte2Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_above="@+id/Corte4Field"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte4Field"
        android:layout_alignEnd="@+id/Corte3Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_above="@+id/Corte5Field"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Corte5Field"
        android:hint="@string/Valor_corte_String"
        android:visibility="invisible"
        android:layout_above="@+id/Corte6Field"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/siguienteButton"
        android:layout_below="@+id/Corte5Field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente Materia"
        android:id="@+id/siguienteMateriaButton"
        android:layout_alignBottom="@+id/siguienteButton"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NumCreditosField"
        android:layout_below="@+id/NumCortesField"
        android:layout_centerHorizontal="true"
        android:hint="Numero de creditos" />

</RelativeLayout>
